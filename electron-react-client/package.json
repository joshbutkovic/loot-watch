{
    "name": "electron-react-client",
    "description": "Loot Watch Electon",
    "version": "0.1.0",
    "private": true,
    "author": {
        "name": "Josh Butkovic",
        "email": "joshbutkovic@gmail.com",
        "url": "https://www.loot-watch.com"
    },
    "build": {
        "appId": "com.lw.lootwatch",
        "productName": "Loot Watch",
        "copyright": "Copyright Â© 2019 ${author}",
        "mac": {
            "category": "public.budget.utilities"
        },
        "files": [
            "build/**/*",
            "node_modules/**/*"
        ],
        "directories": {
            "buildResources": "assets"
        }
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.22",
        "@fortawesome/free-brands-svg-icons": "^5.10.2",
        "@fortawesome/free-regular-svg-icons": "^5.10.2",
        "@fortawesome/free-solid-svg-icons": "^5.10.2",
        "@fortawesome/react-fontawesome": "^0.1.4",
        "@types/jest": "24.0.15",
        "@types/node": "12.6.8",
        "@types/react-dom": "16.8.4",
        "@types/react-redux": "^7.1.2",
        "@types/react-router-dom": "^4.3.4",
        "@types/redux": "^3.6.0",
        "@types/redux-thunk": "^2.1.0",
        "axios": "^0.19.0",
        "electron-is-dev": "^1.0.1",
        "moment": "^2.24.0",
        "mustard-ui": "^0.0.8",
        "node-sass": "^4.12.0",
        "prettier": "^1.18.2",
        "react": "^16.8.3",
        "react-dom": "^16.8.3",
        "react-fontawesome": "^1.6.1",
        "react-hook-form": "^3.18.14",
        "react-outside-click-handler": "^1.3.0",
        "react-pose": "^4.0.8",
        "react-redux": "^7.1.1",
        "react-router-dom": "^5.0.1",
        "react-scripts": "2.1.5",
        "redux": "^4.0.4",
        "redux-thunk": "^2.3.0"
    },
    "homepage": "./",
    "main": "public/electron.js",
    "scripts": {
        "start": "rescripts start",
        "build": "rescripts build",
        "test": "rescripts test",
        "eject": "react-scripts eject",
        "electron-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
        "dev": "react-scripts start",
        "postinstall": "electron-builder install-app-deps",
        "preelectron-pack": "yarn build",
        "electron-pack": "electron-builder -m"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "devDependencies": {
        "@rescripts/cli": "^0.0.10",
        "@rescripts/rescript-env": "^0.0.5",
        "@types/axios": "^0.14.0",
        "@types/classnames": "^2.2.9",
        "@types/history": "^4.7.3",
        "@types/react": "^16.9.4",
        "@types/react-outside-click-handler": "^1.2.0",
        "@types/styled-components": "^4.1.19",
        "components": "^0.1.0",
        "concurrently": "^4.1.0",
        "electron": "^4.0.6",
        "electron-builder": "^20.38.5",
        "eslint-utils": "^1.4.2",
        "styled": "^1.0.0",
        "typescript": "^3.3.3333",
        "wait-on": "^3.2.0"
    }
}
